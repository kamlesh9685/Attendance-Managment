# ======================
# DATABASE CONFIGURATION
# ======================
MONGODB_URI=mongodb://localhost:27017/attendance-system
# Format: mongodb://<username>:<password>@<host>:<port>/<database>
# For production: mongodb+srv://user:pass@cluster.example.net/attendance-system

# =================
# AUTHENTICATION
# =================
JWT_SECRET=your_random_32+_character_secret_here
JWT_EXPIRES_IN=7d  # Token expiration (e.g., 1h, 7d, 30d)

# =============
# SERVER
# =============
PORT=5000
NODE_ENV=development  # Change to 'production' when deploying

# ======================
# FILE UPLOADS (Optional)
# ======================
MAX_FILE_SIZE=5  # In MB
ALLOWED_FILE_TYPES=image/jpeg,image/png

# ======================
# EMAIL (Optional - for password resets)
# ======================
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your.email@gmail.com
EMAIL_PASS=your_app_specific_password  # Not your regular Gmail password!
EMAIL_FROM=attendance-system@yourdomain.com